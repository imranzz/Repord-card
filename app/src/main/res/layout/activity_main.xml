<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/report_view"
    android:layout_height="match_parent"
    tools:context="com.example.andriod.reportcard.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <EditText
        android:id="@+id/your_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of the student"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/getMaths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Maths score"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/getEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="English score"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/getHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="History score"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/getArt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Art score"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/getPhysics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Physics score"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/getBiology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Biology score"
        android:inputType="textMultiLine" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/SubmitButton"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/results"
        android:textAllCaps="true"/>
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Thank You"
        android:textAllCaps="true"/>
    </LinearLayout>
</ScrollView>
